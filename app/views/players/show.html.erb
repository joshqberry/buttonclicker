<h1>Singles games </h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Single id</th>
      <th>Player A </th>
      <th>Player B </th>
      <th>winner </th>
      <th>loser </th>
      <th>score </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>

    <% @singles.each do |single| %>

        <td><%= single.id %></td>
        <td><%= single.playerA_name %></td>
        <td><%= single.playerB_name %></td>
        <td><%= single.winner_id %></td>
        <td><%= single.loser_id %></td>
        <td><%= single.winner_score %>&nbsp;--&nbsp;<%= single.loser_score %></td>
      </tr>
      <% end %>

    </tbody>
  </table>


