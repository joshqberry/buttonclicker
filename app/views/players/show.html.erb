    <tr>
      <th>id</th>
      <th>Team name</th>
      <th>Victories </th>
      <th>Defeats </th>

      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.id %></td>
        <td><%= team.team_players %></td>
        <td><%= team.doubles.where(teamwinner_id: team.id).count %></td>
        <td><%= team.doubles.where(teamloser_id: team.id).count %></td>
      </tr>

      <% end %>

    </tbody>
  </table>
