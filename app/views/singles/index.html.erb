<h1>All singles games</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Player A</th>
      <th>Player B</th>
      <th>Winning player</th>
      <th>Losing player</th>
      <th>Winning player score</th>
      <th>Losing player score</th>
      <th>Started at</th>
      <th>Ended at</th>

      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>



    <% @singles.each do |single| %>
      <tr>
        <td><%= link_to single.playerA_name, player_path(@player) %></td>
        <td><%= link_to single.playerB_name, player_path(@player) %></td>
        <td><%= single.winner_id %></td>
        <td><%= single.loser_id %></td>
        <td><%= single.winner_score %></td>
        <td><%= single.loser_score %></td>
        <td><%= single.created_at %></td>
        <td><%= single.ended_at %></td>


      </tr>


<% end %>
