<script>

  $('#on').click(function(){
    $.get('/on')
  });

  $('#off').click(function(){
    $.get('/off')
  });

  $('#goingup').click(function(){
    $.get('/numberupleft')
  });

  $('#goingupright').click(function(){
    $.get('/numberupright')
  });

  $('#alsogoingup').click(function(){
    $.get('/alsonumberup')
  });

  $('#alsogoingupright').click(function(){
    $.get('/alsonumberupright')
  });


  var pusher = new Pusher('<%= Pusher.key %>',{ authEndpoint: '/pusher/auth' }); // uses your APP KEY
  var channel = pusher.subscribe('private-button');

  channel.bind('up', function(data) {

   var value = parseInt(document.getElementById('numberBigLeft').value, 10);

   value = isNaN(value) ? 0 : value;

   value++;

   document.getElementById('numberBigLeft').value = value;

   $('body').css({background: 'white'});

   if (document.getElementById('numberBigLeft').value == 11)

   {document.getElementById('numberBigLeft').value = "Nicole is awesome";}

 });

 channel.bind('upright', function(data) {

  var value = parseInt(document.getElementById('numberBigRight').value, 10);

  value = isNaN(value) ? 0 : value;

  value++;

  document.getElementById('numberBigRight').value = value;

  $('body').css({background: 'white'});

  if (document.getElementById('numberBigRight').value == 11)

  {document.getElementById('numberBigRight').value = "Nicole is awesome";}

});










  function incrementValueLeft()
  {
    var value = parseInt(document.getElementById('numberBigLeft').value, 10);
    value = isNaN(value) ? 0 : value;
    value++;
    document.getElementById('numberBigLeft').value = value;

  }

  function incrementValueRight()
  {
    var value = parseInt(document.getElementById('numberBigRight').value, 10);
    value = isNaN(value) ? 0 : value;
    value++;
    document.getElementById('numberBigRight').value = value;

  }





</script>
