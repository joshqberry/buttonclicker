          <%= collection_select(:single, :playerA_name, Player.all, :name, :name, {},
      {:onchange => "queueSinglesPlayer()", :id => "selectSinglesPlayer1"}) %>

          <%= collection_select(:single, :playerB_name, Player.all, :name, :name, {},
      {:onchange => "queueSinglesPlayer2()", :id => "selectSinglesPlayer2"}) %>

<br>
<br>
      <span id="SinglesPlayer1NextyPopup">player 1</span>&nbsp;vs.
      <span id="SinglesPlayer2NextyPopup">player 2</span>

