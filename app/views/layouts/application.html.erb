              <br>
              <br>

              Select team 1 player 2:
              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Select team 2 player 2:

              <br>
              <br>

              <%= collection_select(:team, :teammember1, Player.all, :name, :name, {},
          {:onchange => "queueDoublesPlayer2A()", :id => "selectDoublesPlayer2A"}) %>

            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


            <%= collection_select(:team, :teammember2, Player.all, :name, :name, {},
          {:onchange => "queueDoublesPlayer2B()", :id => "selectDoublesPlayer2B"}) %>

                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


